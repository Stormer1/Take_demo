<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="112dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_item_num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="123"
            android:textColor="#FF5722"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/item_num"
            app:layout_constraintEnd_toStartOf="@+id/time"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#5CC9FA"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/item_type"
            app:layout_constraintTop_toTopOf="@+id/type"
            app:layout_constraintVertical_bias="0.222" />

        <TextView
            android:id="@+id/item_item_num"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="123"
            android:textColor="#312D2D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/item_time"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/item_type"
            app:layout_constraintTop_toBottomOf="@+id/item_type" />

        <TextView
            android:id="@+id/item_auther"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="123"
            android:textColor="#838080"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/item_type"
            app:layout_constraintTop_toBottomOf="@+id/item_item_num"
            app:layout_constraintVertical_bias="0.304" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>